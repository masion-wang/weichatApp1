.section {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.btn {
  margin-top: 140rpx;
  width: 60%;
  font-size: 30rpx;
  color: white;
  border-radius: 15px;
  text-shadow: 0 -1px 1px #335166;
  margin-bottom: 30rpx;
  background: #58ca5c;
}

.flexSwtich {
  display: flex;
  justify-content: space-between;
  height: 70rpx;
  line-height: 70rpx;
  padding: 10rpx;
}

.everyDay {
  margin: 0 auto;
}

.main {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.middle {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
